    cp -f /boot/config/plugins/dwpython/scripts/autoexec.sh /tmp/dwpython-autoexec.sh >/dev/null 2>&amp;1
    chmod 755 /tmp/dwpython-autoexec.sh >/dev/null 2>&amp;1
